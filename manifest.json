{
  "manifest_version": 3,
  "name": "Invitation notepad",
  "version": "0.3.2",
  "description": "Generate and manage connection‑request notes with an AI‑powered widget.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://api.openai.com/"
  ],
  "action": {
    "default_popup": "ui/popup.html",
    "default_title": "Invitation notepad"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*"
      ],
      "js": [
        "ui/templates.js",
        "content_script.js"
      ],
      "css": [
        "css/style.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "css/style.css"
      ],
      "matches": ["https://www.linkedin.com/*"]
    }
  ]
}